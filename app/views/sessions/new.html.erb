<%= render partial: 'shared/html_title', locals: {subtitle: "ログイン"} %>
<div class="login-box">
  <div class="login-logo">
    <div><small>Welcome to</small></div>
    <%= image_tag 'logo_only_letters.gif', class: "logo" %>
  </div><!--/.login-logo -->

  <div class="login-box-body">
    <p class="text-redpepper"><%= alert %></p>
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, placeholder: "メールアドレス", required: true, class: "form-control" %>
      </div>
      <br />

      <div class="form-group has-feedback">
        <%= f.password_field :password, placeholder: "パスワード", required: true, class: "form-control" %>
      </div>
      <br /><br />

      <div class="button-panel">
        <%= f.submit "ログイン", class:"btn btn-orange btn-block" %>
      </div>

    <% end %>
  </div><!-- /.login-box-body -->

</div><!-- /.login-box -->
