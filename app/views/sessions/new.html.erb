<%= render partial: 'shared/html_title', locals: {subtitle: "ログイン"} %>
<div class="login-box">
  <div class="login-logo">
    <%= image_tag 'icon.png', width: 42, height: 42 %>
    <b>PairMoney</b>
    <%= image_tag 'icon.png', width: 42, height: 42 %>
  </div><!--/.login-logo -->


  <div class="login-box-body">
    <p class="text-red"><%= alert %></p>
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, placeholder: "メールアドレス", required: true, class: "form-control" %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, placeholder: "パスワード", required: true, class: "form-control" %>
      </div>

      <div class="button-panel">
        <%= f.submit "ログイン", class:"btn btn-orange btn-block btn-flat" %>
      </div>

      <div class="form-footer text-center" style="margin-top: 20px">
        <%= link_to '新規登録', new_user_path, class: "inherit-color" %>
      </div>

    <% end %>
  </div><!-- /.login-box-body -->

</div><!-- /.login-box -->
