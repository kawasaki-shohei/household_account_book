<div class="form-wrapper">
  <h1>Log in</h1>

  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="form-item">
      <%= f.email_field :email, placeholder: "Email Address", required: true %>
    </div>


    <div class="form-item">
      <%= f.password_field :password, placeholder: "Password", required: true %>
    </div>

    <div class="button-panel">
      <%= f.submit "Log in", class:"button", title: "Sign In" %>
    </div>

    <div class="form-footer">
      <%= link_to 'Sign up', new_user_path %>
    </div>

  <% end %>

</div>
