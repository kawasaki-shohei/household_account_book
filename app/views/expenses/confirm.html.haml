%div.whole_page.container
  %h3 以下の内容で追加する
  = form_with(model: @expense, local: true, url: expenses_path) do |form|
    - if @expense.errors.any?
      = render 'layouts/error', var: @expense
    = form.hidden_field :amount
    = form.hidden_field :date
    = form.hidden_field :note
    = form.hidden_field :category_id
    = form.hidden_field :percent
    = form.hidden_field :both_flg

    %div 金額：¥#{number_with_delimiter(@expense.amount, delimiter: ",")}

    %div 日付：#{@expense.date.strftime("%Y/%m/%d(%a)")}

    %div メモ：#{@expense.note}

    %div カテゴリー：#{Category.find(@expense.category_id).kind}

    = form.submit

  = form_with(model: @expense, local: true, url: new_expense_path, method: :get) do |form|
    = form.hidden_field :amount
    = form.hidden_field :date
    = form.hidden_field :note
    = form.hidden_field :category_id
    = form.hidden_field :percent
    = form.hidden_field :both_flg
    = form.submit '戻る', name: 'back'
  -# 出費フォーム
