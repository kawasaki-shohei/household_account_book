
.input-group.mb-3
  .input-group-prepend
    %span.input-group-text 支払い金額
  = form.number_field :amount, class: "form-control", id: "paid_amount", min: 0, required: true
  .input-group-append
    %span.input-group-text 円

- if controller.controller_name == 'repeat_expenses'
  %div.form-group
    %label{ for: 's_date' } 開始日
    %div
      - if action_name == 'new' || action_name == 'both' || action_name == 'confirm'
        = form.date_field :s_date, class:"form-control", required: true, value: Date.today
      - elsif action_name == 'edit'
        = form.date_field :s_date, class:"form-control", required: true, value: expense.s_date
  %div.form-group
    %label{ for: 'e_date' } 終了日
    %div
      - if action_name == 'new' || action_name == 'both' || action_name == 'confirm'
        = form.date_field :e_date, class:"form-control", required: true, value: Date.today
      - elsif action_name == 'edit'
        = form.date_field :e_date, class:"form-control", required: true, value: expense.e_date
  %div.form-group
    %label{ for: 'r_date' } 毎月 何日？
    %div
      - if action_name == 'new' || action_name == 'both' || action_name == 'confirm'
        = form.select :r_date, 1..28, { include_blank: "-" }, required: true, id: "r_date"
      - elsif action_name == 'edit'
        = form.select :r_date, 1..28, { include_blank: "-" }, required: true, value: expense.r_date, id: "r_date"
- elsif controller.controller_name == 'expenses'
  %div.form-group
    %label{ for: 'date' } 日付
    %div
      - if action_name == 'new' || action_name == 'both' || action_name == 'confirm'
        = form.date_field :date, class:"form-control", required: true, value: Date.today
      - elsif action_name == 'edit'
        = form.date_field :date, class:"form-control", required: true, value: expense.date
%div.form-group
  %label{ for: 'memo' } メモ
  %div
    = form.text_field :note, class:"form-control"
