<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title><%= CONFIG[:site_name] %></title>
  <%= favicon_link_tag('favicon.ico') %>
  <%= stylesheet_link_tag 'admin-lte/dist/css/skins/skin-red.min' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'overwrite_admin_lte' %>
  <%= stylesheet_link_tag 'home' %>
  <%= stylesheet_link_tag 'login' %>
</head>

<body class="hold-transition home-page">
<div class="wrapper">

  <!-- Main Header -->
  <header class="before-login-header">
    <a href="/" class="logo"><b><%= CONFIG[:site_name] %></b></a>
    <span class="header-menu">
      <%= link_to '新規登録', signup_path, class: "menu-link" %>
      <%= link_to 'ログイン', login_path, class: "menu-link" %>
    </span>
  </header>

  <%= yield %>

</div><!-- ./wrapper -->

<%= javascript_include_tag 'application' %>
<%= yield(:other_javascript) %>
</body>
</html>
