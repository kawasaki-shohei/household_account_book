<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <div class="box box-brown">
        <div class="box-body">
          <%= form_with(model: deposit, local: true) do |f| %>
            <%=render 'shared/error', object: deposit %>

            <%= f.label :amount , value: t('amount') %>
            <div class="input-group">
              <%= f.number_field :amount, class:"form-control input-lg", min: 0, max: 9999999999, value: deposit.amount&.abs, required: true %>
              <span class="input-group-addon"><%= t('currency') %></span>
            </div>
            <br>

            <div class="form-group">
              <%= f.label :date, value: t('date_label') %>
              <div>
                <%= f.date_field :date, required: true, value: deposit.default_date, class: "form-control input-lg" %>
              </div>
            </div>
            <br>

            <div class="form-group">
              <%= f.label :date, value: t('memo') %>
              <div>
                <%= f.text_field :memo, class: "form-control input-lg" %>
              </div>
            </div>
            <br>

            <% if action_name == 'withdraw' %>
              <%= f.hidden_field :is_withdrawn, value: true %>
            <%end %>

            <div class="form-group">
              <%= f.submit submit_btn_letters, class: "btn btn-orange btn-block" %>
            </div>

            <% if action_name == 'edit' %>
              <%= link_to t('delete'), deposit_path(deposit), method: :delete, data:{confirm: "Are you sure?"}, class: 'btn btn-brown btn-block' %>
            <% end %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>