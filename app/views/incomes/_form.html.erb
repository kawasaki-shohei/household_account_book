<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-xs-12">
      <div class="box box-danger">
        <div class="box-body">
          <%= form_with(model: income, local: true) do |f| %>
            <%=render 'layouts/error', object: income %>
            <%= f.label :amount , value: '金額' %>
            <div class="input-group">
              <%= f.number_field :amount, class:"form-control input-lg", min: 0, max: 9999999999, value: income.amount, required: true %>
              <span class="input-group-addon">円</span>
            </div>
            <br>

            <div class="form-group">
              <%= f.label :date, value: '日付' %>
              <div>
                <%= f.date_field :date, required: true, value: income.default_date, class: "form-control" %>
              </div>
            </div>
            <br>

            <div class="form-group">
              <%= f.label :date, value: 'メモ' %>
              <div>
                <%= f.text_field :memo, class: "form-control" %>
              </div>
            </div>
            <br>

            <div class="form-group">
              <%= f.submit submit_btn_letters, class: "btn btn-danger btn-block" %>
            </div>

            <% if action_name == 'edit' %>
              <%= link_to '削除する', income_path(income), method: :delete, data:{confirm: "Are you sure?"}, class: 'btn btn-default btn-block' %>
            <% end %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>